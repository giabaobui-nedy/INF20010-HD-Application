<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.GetCustomerController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
        <Label text="Customer ID: "/>
        <TextField fx:id="custId"/>
        <Button onMouseClicked="#getCustomerFromDB" text="Search this customer"/>
        <Label text="Server response: "/>
        <TextArea fx:id="response"/>
    </VBox>
</StackPane>
