<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.UpdateProductSalesController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
        <Label text="Product ID: "/>
        <TextField fx:id="prodId"/>
        <Label text="Amount to change: "/>
        <TextField fx:id="amount"/>
        <Button onMouseClicked="#updateProductSales" text="Update sales YTD of this product"/>
        <Label text="Server response: "/>
        <Text fx:id="response"/>
    </VBox>
</StackPane>
