<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.GetCountSales">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
        <Label text="Customer ID: "/>
        <TextField fx:id="day"/>
        <Button onMouseClicked="#getCountSales" text="Count sales"/>
        <Label text="Server response: "/>
        <Text fx:id="response"/>
    </VBox>
</StackPane>
