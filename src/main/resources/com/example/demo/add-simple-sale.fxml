<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AddSimpleSaleController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
        <Label text="Customer ID: "/>
        <TextField fx:id="custId"/>
        <Label text="Product ID: "/>
        <TextField fx:id="prodId"/>
        <Label text="Sale quantity: "/>
        <TextField fx:id="quantity"/>
        <Button onMouseClicked="#addSimpleSale" text="Add simple sale"/>
        <Label text="Server response: "/>
        <Text fx:id="response"/>
    </VBox>
</StackPane>
